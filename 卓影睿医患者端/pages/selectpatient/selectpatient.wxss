page {
  font-family: MicrosoftYahei;
  height: 100%;
}
.background{
  background-color: white;
  border-top: 2px solid rgb(241, 242, 243);
}
.title{
  font-size: 28rpx;
  color: rgb(34, 34, 34);
  margin-top: 36rpx;
  margin-left: 54rpx;
}
.create{
  margin-top: 30rpx;
  margin-left: 54rpx;
  display: flex;
  align-items: center;
  width: 300rpx;
  height: 80rpx;
  border: 1px solid rgb(228, 228, 228);
  border-radius: 3px;
}
.icone{
  margin-left: 34rpx;
  width: 32rpx;
  height: 31rpx;
  background-image: url(https://wxprogram.zc5l.com/img/pant_inform_icon.png);
  background-size: 100% 100%;
}
.name{
  margin-left: 18rpx;
  margin-right: 4rpx;
  font-size: 26rpx;
  color: rgb(34, 34, 34);
}
.patient{
  position: absolute;
  margin-top: 30rpx;
  margin-left: 54rpx;
  display: flex;
  align-items: center;
  width: 550rpx;
  height: 80rpx;
  border: 1px solid rgb(49, 220, 209);
}
.age{
  margin-left: 20rpx;
  font-size: 26rpx;
  color: rgb(102,102,102);
}
.info{
  margin-left: 20rpx;
  font-size: 26rpx;
  color: rgb(102,102,102);
  width: 200rpx;
  text-overflow:ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.change{
  position: absolute;
  top: 20rpx;
  right:60rpx;
  font-size: 26rpx;
  color: rgb(49, 220, 209);
}
.sicon{
  position: absolute;
  top: 0;
  right: 0;
  width: 36rpx;
  height: 33rpx;
  background-image: url(https://wxprogram.zc5l.com/img/check_icon.png);
  background-size: 100% 100%;
}
.confirm{
  position: absolute;
  bottom: 0;
  width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: white;
    background-color: rgb(60,76,193);
    text-align: center;
}
.confirmh{
  background-color: #7cb5fb;
}