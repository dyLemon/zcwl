page {
  height: 100%;
  width: 100%;
  font-family: MicrosoftYahei;
}
.background{
  width: 100%;
  height: 100%;
  background-color:rgb(241, 242, 243);
}
.timgbc{
  position: absolute;
  background-image: url(https://wxprogram.zc5l.com/img/Doct_infor_bg.png);
  background-size: 100% 100%;
  width: 100%;
  height: 134rpx;
  z-index: 1;
}
.titlebox{
  background-color: white;
  height: 305rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 0;
}
.avatar{
  margin-top: 18rpx;
  width: 150rpx;
  height: 150rpx;
  background-size: 100% 100%;
  border-radius: 14px;
  z-index: 2;
}
.nbox{
  margin-top: 20rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.name{
  font-size: 30rpx;
  color: rgb(34, 34, 34);
}
.jobtitle{
  font-size: 24rpx;
  color: rgb(68, 68, 68);
}
.hospital{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgb(68, 68, 68);
}
.goodatbox{
  margin-top: 8rpx;
  width: 100%;
  display: flex;
  background-color: white;
}
.goodaticon{
  margin-left: 60rpx;
  margin-top: 53rpx;
  width: 30rpx;
  height: 30rpx;
  background-image: url(https://wxprogram.zc5l.com/img/GoodAt_icon.png);
  background-size: 100% 100%;
}
.goodattbox{
  margin-top: 53rpx;
  margin-left: 16rpx;
  width: 500rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}
.goodatt{
  font-size: 24rpx;
  color: rgb(34, 34, 34);
  height: 24rpx;
  list-style: 24rpx;
}
.goodat{
  margin-top: 10rpx;
  font-size: 22rpx;
  color: rgb(119, 119, 119);
  line-height: 40rpx;
}
.tagbox{
  margin-top: 4rpx;
  display: flex;
  width: 100%;
  height: 90rpx;
  align-items: center;
  background-color: white;
}
.tagicon{
  margin-left: 60rpx;
  width: 30rpx;
  height: 30rpx;
  background-image: url(https://wxprogram.zc5l.com/img/Label_icon.png);
  background-size: 100% 100%;
}
.tbox{
  margin-left: 16rpx;
  display: flex;
  
}
.tag{
  padding-left: 10rpx;
  padding-right: 10rpx;
  text-align: center;
  height: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: rgb(49, 220, 209);
  border-radius: 2px;
  background-color: rgb(234, 251, 250);
}
.confirmbtn{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  font-size: 30rpx;
  text-align: center;
  background-color: rgb(60, 76, 193);
  color: white;
  line-height:98rpx;
  padding: 0;
}
.confirmbtn::after{
  display: none;
}
.confirmbtn[disabled]{
  border: 1rpx solid rgb(181,181,181);
}
.confirmbtnh{
  background-color: #7cb5fb;
}