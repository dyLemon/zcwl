page {
    font-family: MicrosoftYahei;
    height: 100%;
}
.public{
    position: absolute;
    top: 50rpx;
    width: 100%;
    height: 100rpx;
}
.container {
    height: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tl {
    width: 100%;
    height: 50rpx;
    background: linear-gradient(rgb(230,230,230),white);
}

.userinfo-avatar {
    margin-top: 180rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    margin-top: 10rpx;
    color: #aaa;
}

.xcxn {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: rgb(193,193,193);
}

.line {
    width: 632rpx;
    height: 1rpx;
    background-color: rgb(193,193,193);
    margin: 50rpx;
}

.agreement {
    margin-top: 20rpx;
    width: 600rpx;
    font-size: 26rpx;
    line-height: 50rpx;
    color: rgb(96,98,102);
}

.remember {
    margin-top: 80rpx;
    height: 48rpx;
    line-height: 48rpx;
    width: 600rpx;
    color: rgb(96,98,102);
}

.remember :checked {
    color: rgb(46,219,208);
}

.remember .wx-checkbox-input {
    width: 40rpx;
    height: 40rpx;
    border: 2rpx solid rgb(181,181,181);
}

.remember .wx-checkbox-input.wx-checkbox-input-checked {
    border: 2rpx solid rgb(46,219,208);
}

.remember .si_checked {
    color: rgb(46,219,208);
}

.rm {
    color: rgb(96,98,102);
    font-size: 30rpx;
}

.fg {
    color: rgb(96,98,102);
    font-size: 30rpx;
}

.login {
    margin-top: 80rpx;
    width: 600rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: white;
    background-color: rgb(60,76,193);
}

.login::after {
    display: none;
}

.login[disabled] {
    color: rgb(96,98,102)!important;
    background-color: rgb(241,242,243)!important;
}
.loginh{
    background-color: #7cb5fb;
}