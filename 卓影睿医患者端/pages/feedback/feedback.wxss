}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  color: #fff;
}
.modal-dialog {
  width: 78%;
  position: absolute;
  top: 30%;
  left: 10%;
  background: #fff;
  border-radius: 12rpx;
  z-index: 1000;
}
.modal-content{
  padding: 20px;
  color:rgb(60, 60, 61);
  text-align: center;
}

.modal-content .feedback {
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content view{
  font-size: 28rpx;
  line-height: 64rpx;
  color: rgb(96,98,102);
}
.modal-dialog image{
  width: 30rpx;
  height: 30rpx;
}

.modal-content .feedback button:nth-child(2){
  border: 1px solid rgba(121, 123, 128, 0.726);
  background: #fff;
}

.modal-dialog .img{
  position: absolute;
  right: 30rpx;
  top:20rpx;
  width: 34rpx;
  height: 34rpx;
  background: url(https://wxprogram.zc5l.com/img/close_btn_n.png) no-repeat center;
}

.modal-dialog .img:hover{
