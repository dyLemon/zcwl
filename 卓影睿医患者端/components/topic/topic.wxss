.topicbox{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.topicbox .titlenum{
  color: rgb(193,193, 193);
  font-size: 32rpx;
  margin-top:50rpx;
  text-align: center;
  margin-bottom:50rpx;
}
.topicbox .title{
  font-size: 32rpx;
  margin-bottom: 10rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;  
display: inline-block;

}
.topicbox .radiolist{
  margin-left: 110rpx;
  margin-top:46rpx;
}
.topicbox .radiolist radio,.topicbox .radiolist  checkbox{
  line-height: 90rpx;
}
.topicbox .checkbox label:last-child{
  margin-bottom: 30rpx;
}
.topicbox textarea{
  width: 508rpx;
  height: 254rpx;
  border: 1px solid rgb(175, 175, 175);
  padding: 22rpx;
  box-sizing: border-box;
  border-radius: 8px;
  color: rgb(177, 177, 177);
  font-size: 30rpx;
  /* margin-top:20rpx; */
}

.topicbox button{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  color: #fff;
  font-size: 30rpx;
  background:rgb(60, 76, 193) ;
  margin-top:50rpx;
  margin-bottom: 30rpx;
  /* left:50%;
  margin-left:-150rpx;
  bottom: 100rpx; */
}
.topicbox image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}
.topicbox checkbox{
  transform: scale(0.8);
}

