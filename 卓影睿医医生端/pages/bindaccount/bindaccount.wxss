page {
  font-family: MicrosoftYaHeiLight;
  height: 100%;
}
.background{
  background-color: rgb(241, 242, 243);
  height: 100%;
}
.content{
  background-color: white;
  position: absolute;
  top: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.titleicon{
  width: 22px;
  height:22px;
  margin-top: 74rpx;
  background-image: url(https://wxprogram.zc5l.com/img/connect_icon_n.png);
  background-size: 100% 100%;
  margin-bottom: 50rpx;
}
.titlebox{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}
.title{
  color: rgb(153, 153, 153);
  font-size: 24rpx;
}
.inputbox{
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid rgb(217, 217, 217);
}
.property{
  position: fixed;
  left: 30rpx;
  color: rgb(34, 34, 34);
  font-size: 28rpx;
}
.account{
  text-align: right;
  width: 500rpx;
  height: 90rpx;
  position: fixed;
  right: 30rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}
.bind{
  margin-top: 110rpx;
  width: 300rpx;
  height: 80rpx;
  background-color: rgb(60, 76, 193);
  color: white;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}
.bind::after{
  display: none;
}
.bindh{
  background-color: #7cb5fb;
}
.successbg{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box{
  width: 550rpx;
  height: 350rpx;
  background-color: white;
  border-radius: 10rpx;
  margin-top: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.btitle{
  font-size: 34rpx;
  color: rgb(34, 34, 34);
  margin-top: 84rpx;
}
.line{
  margin-top: 30rpx;
  width: 520rpx;
  border-bottom: 1px solid rgb(241, 242, 243);
}
.des{
  margin-top: 30rpx;
  word-wrap: break-word;
  font-size: 30rpx;
  color: rgb(96, 98, 102);
  width: 428rpx;
}