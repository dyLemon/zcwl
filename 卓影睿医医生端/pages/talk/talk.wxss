page {
    height: 100%;
    font-family: MicrosoftYahei;
}

.background {
    height: 100%;
    background-color: #f1f1f1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.msgroom {
    width: 100%;
    background-color: rgb(241, 242, 243);
    margin-top: 6rpx;
    border-radius: 10rpx;
    /* width: 700rpx; */
    display: flex;
    flex-direction: column;
}

.talkt {
    display: flex;
    flex-direction: column;
}

.tname {
    font-size: 22rpx;
    color: #606266;
}

.inputRoom {
    background-color: #f1f1f1;
    width: 700rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 121rpx;
    z-index: 20;
}

.create {
    width: 236rpx;
    height: 100rpx;
    position: absolute;
    right: 30rpx;
    bottom: 70rpx;
    background-image: url(https://wxprogram.zc5l.com/img/new_plan_btn_n.png);
    background-size: 100% 100%;
    z-index: 100;
}

.createh {
    background-image: url(https://wxprogram.zc5l.com/img/new_plan_btn_p.png);
    background-size: 100% 100%;
}

.add {
    width: 54rpx;
    height: 54rpx;
    background: url(https://wxprogram.zc5l.com/img/new_plan_icon_n.png) no-repeat center/contain;
    /* background-size: contain; */
    margin-left: 10rpx;
}

.addh {
    width: 54rpx;
    height: 54rpx;
    background-image: url(https://wxprogram.zc5l.com/img/new_plan_icon_p.png);
    background-size: 100% 100%;
    margin-left: 20rpx;
}

.inputb {
    width: 500rpx;
    height: 72rpx;
    background-color: #fff;
    border-radius: 60rpx;
    display: flex;
    align-items: center;
}

input {
    margin-left: 30rpx;
    font-size: 28rpx;
    color: #444;
}

.time {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: 10rpx 30rpx;
}

.stime {
    width: 300rpx;
    font-size: 24rpx;
    color: #c1c1c1;
}

.tshow {
    display: flex;
    flex-direction: column;

    /* width: 480rpx; */
    justify-content: space-around;
    /* height: 260rpx; */
    align-items: center;
}

.orderbox {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0rpx 0 10rpx 0;
}

.ttitle {
    /* width: 400rpx; */
    font-size: 30rpx;
    align-self: flex-start;
    color: #606266;
    display: inline-block;
}

.tview {
    width: 400rpx;
    height: 126rpx;
    display: flex;
    /* background-color: #f1f2f3; */
    border-radius: 6rpx;
}

.tview image {
    /* margin-left: 12rpx; */
    margin-right: 12rpx;
    margin-top: 13rpx;
    margin-bottom: 13rpx;
    border-radius: 6rpx;
    width: 140rpx;
    height: 100rpx;

}

.action {
    height: 24rpx;
    font-size: 24rpx;
    color: #5d5f63;
    margin-bottom: 12rpx;
}

.count {
    height: 20rpx;
    font-size: 20rpx;
    color: #909399;
    margin-bottom: 25rpx;
}

.price {
    font-size: 20rpx;
    color: #d14849;
}

.leftMsg {
    font-size: 28rpx;
    color: #606266;
    line-height: 40rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
    background-color: white;
    border-radius: 30rpx;
    word-break: break-all;
}

.rightMsg {
    font-size: 28rpx;
    color: #606266;
    line-height: 40rpx;
    padding: 22rpx;
    box-sizing: border-box;
    background-color: white;
    border-radius: 30rpx;
    word-break: break-all;
}
.rightMsgs {
    font-size: 28rpx;
    color: rgb(96, 98, 102);
    line-height: 40rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    background-color: #b9d8ff;
    border-radius: 30rpx;
    word-break: break-all;
}

.send {
    width: 170rpx;
    height: 60rpx;
    font-size: 32rpx;
    color: #ffffff;
    background-color: #3c4cc1;
    line-height: 60rpx;
    border-radius: 60rpx;
    margin-left: 18rpx;
}

.sendh {
    background-color: #7cb5fb;
}

.tstate {
    width: 100rpx;
    align-self: flex-end;
    line-height: 40rpx;
    text-align: center;
    height: 40rpx;
    font-size: 24rpx;
    border-radius: 40rpx;
    color: rgb(209, 72, 73);
    /* border: 1rpx solid #606266; */
}