/* ---弹窗css--- */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  color: #fff;
}
.modal-dialog {
  width: 72%;
  position: absolute;
  top: 30%;
  left: 14%;
  background: #fff;
  border-radius: 12rpx;
}
.modal-content{
  padding: 20px;
  text-align: center;
}
.modal-content .mini{
  color:rgb(194, 194, 194);
  font-size: 24rpx;
  margin:16px 0;
}


.modal-content button{
  width: 80%;
  height: 80rpx;
  border-radius: 60rpx;
  font-size: 30rpx;
  color: #fff;
  background: #31cc32;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-sizing: border-box;

}

