page {
    font-family: MicrosoftYaHeiLight;
}

.background {
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
}

.title {
    background-color: #7CB5FB;
    width: 100%;
    display: flex;
}
.bottom{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(rgb(241,242,243),rgb(233,233,233));
  }
.empty {
    height: 100%;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.epimg {
    position: relative;
    left: 35rpx;
    width: 209rpx;
    height: 137rpx;

}
.emptytext{
    margin-top: 20rpx;
    font-size: 24rpx;
    color: rgb(193,193,193);
}
.b {
    margin-top: 56rpx;
    width: 690rpx;
    height: 80rpx;
    background-color: white;
    border: none;
    border-radius: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hb {
    background-color: #7cb5fb;
}

.hb text {
    color: white;
}

.b image {
    width: 36rpx;
    height: 36rpx;
    margin: 8rpx;
}

.b text {
    color: rgb(181,181,181);
    font-size: 24rpx;
}

.advisorylist {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.table {
    width: 100%;
    height: 130rpx;
    display: flex;
    align-items: center;
}

.avatarbox {
    position: relative;
    width: 50rpx;
    height: 40rpx;
    margin-left: 30rpx;
    margin-right: 20rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.avatarbox image {
    width: 52rpx;
    height: 52rpx;
}
.done{
    height: 10rpx;
    width: 100%;
    background: rgb(241, 242, 243);
  }
.unread {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    height: 14rpx;
    width: 14rpx;
    background-color: red;
    border-radius: 14rpx;
}

.textbox {
    display: flex;
    flex-direction: column;
    margin-right: 20rpx;
}

.nttext {
    display: flex;
}

.name {
    width: 340rpx;
    font-size: 30rpx;
}

.time {
    position: absolute;
    right: 20rpx;
    font-size: 24rpx;
    color: #909399;
}

.talk {
    width: 600rpx;
    font-size: 24rpx;
    margin-top: 4rpx;
    color: #909399;
    text-overflow:ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.line {
    margin-left: 92rpx;
    border-bottom: 1rpx solid rgb(243,241,241);
    width: 578rpx;
    height: 1rpx;
}