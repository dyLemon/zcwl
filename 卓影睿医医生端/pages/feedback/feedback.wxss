.help {
  width: 100%;
  height: 100%;
  padding: 10rpx 25rpx 100rpx 25rpx;
  box-sizing: border-box;
  background: rgb(248,248,248);
}

.help-box{
  padding: 10rpx 0;
  box-sizing: border-box;
  overflow: auto;
  background: #fff;

}
.help .help_item {
  margin: 10rpx auto;
  border-bottom: 4px solid rgb(248,248,248) ;
  padding: 22rpx;
  border-radius: 4px;
  box-sizing: border-box;
}
.help .help_item:last-child{
  border:none;
}
.help .help_item .title {
  font-size: 26rpx;
  color: rgba(96, 98, 102, 0.856);
  display: flex;
  line-height: 40rpx;
  align-items: center;
}
.help .help_item .title .right{
  line-height: 40rpx;
  margin-left: 12px;
}
 .help .help_item .title  image {
  width: 266rpx;
  height: 166rpx;
  object-fit: cover;
  margin: 10rpx auto;
}

.help .help_item .right view {
 line-height: 45rpx;
}

.help .help_item .br{
  display: flex;
  align-items: center;
  margin:14rpx 0;
}
.help .help_item .br view.comment{
  margin: 0 20rpx;
  color: rgb(58, 77, 223);
  font-size: 30rpx;
  font-weight:bold;
}
.help .help_item .br .img{
  width:26rpx;
  height:14rpx;
  margin-left: 10rpx;
  background-size:100%;
  background-image: url(https://wxprogram.zc5l.com/img/down_icon_n.png);
}
.help .help_item .br .imgopen{
  width:26rpx;
  height:14rpx;
  margin-left: 10rpx;
  background-size:100%;
  background-image: url(https://wxprogram.zc5l.com/img/up_icon_n.png);
}
.help .help_item .br text{
  display: inline-block;
  height: 1px;
  background: rgba(116, 118, 122, 0.479);
  width:35%;
}

.help .detail .detailcheck{
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  color: rgb(96, 98, 102);
}

.help .detail .detailcheck .cb{
  transform: scale(0.8,0.8);
}

.help .detail textarea{
  border: 1px solid rgb(46, 219,208);
  width: 100%;
  height: 112rpx;
  margin-top:30rpx;
  padding: 26rpx 126rpx 0rpx 26rpx;
  box-sizing: border-box;
  border-radius: 6px;
  font-size: 30rpx;
  color:rgb(193,193,193);
}

.help button{
  color: #fff;
  background: #3c4cc1;
  height: 80rpx;
  line-height: 80rpx;
  width: 670rpx;
  position: fixed;
  bottom: 20rpx;
  left:38rpx;
}

radio .wx-radio-input{ 
  height: 32rpx; 
  width: 32rpx;
  margin-top: -4rpx;
  border-radius: 0%!important;
  border: 2rpx solid #999;
  background: transparent;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
  border: 2rpx solid rgb(46, 219, 208);
  background: rgb(46, 219, 208);
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 0%;/* 圆角 */
  width: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 32rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 32rpx;
  text-align: center;
  font-size:20rpx; /* 对勾大小 30rpx */
  color:rgb(46, 219, 208); /* 对勾颜色 白色 */
  background: #fff;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}

.help .left{
  position: relative;
}
.help .help_item .title image.iconplay{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 42rpx;
  height: 42rpx;

}
