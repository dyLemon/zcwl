page {
    height: 100%;
}

.background {
    height: 100%;
    background-image: url(https://wxprogram.zc5l.com/img/logon_bg1.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: flex;
    padding-top: 22rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.wait {
    height: 100%;
    background-image: url(https://wxprogram.zc5l.com/img/登陆界面-02.png);
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.logintable {
    width: 670rpx;
    height: 777rpx;
    background-color: white;
    border-radius: 10rpx;
}

.tips {
    width: 580rpx;
    margin-left: 46rpx;
    font-size: 24rpx;
    color: rgb(96,98,102);
    margin-bottom: 25rpx;
}

.user {
    display: flex;
    margin-left: 120rpx;
    margin-top: 80rpx;
    margin-bottom: 60rpx;
}

.userimg {
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.inputfocus {
    width: 360rpx;
    height: 48rpx;
    font-family: MicrosoftYaHeiLight;
    border-bottom: 1rpx solid #7ce8e2;
}

.password {
    display: flex;
    margin-left: 120rpx;
    margin-bottom: 96rpx;
}

.passwordimg {
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
}

.inputblur {
    height: 48rpx;
    width: 360rpx;
    border-bottom: 1rpx solid #e2e4e3;
}

.placlass {
    color: rgb(181,181,181);
}

.login {
    margin-top: 50rpx;
    height: 88rpx;
    border-radius: 10rpx;
    font-family: MicrosoftYaHeiLight;
    line-height: 80rpx;
    font-size: 30rpx;
    color: white;
    background-color: #3c4cc1;
    margin-bottom: 30rpx;
    width: 600rpx;
}

.loginh {
    background-color: #7cb5fb;
}

.login::after {
    display: none;
}

.login[disabled] {
    color: rgb(96,98,102)!important;
    background-color: rgb(241,242,243)!important;
}

.help {
    display: flex;
}

.agree {
    margin-left: 43rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: rgb(181,181,181);
}

.agree:checked {
    color: rgb(46,219,208);
}

.agree.wx-checkbox-input {
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #e2e4e3;
}

.agree.wx-checkbox-input.wx-checkbox-input-checked {
    border: 1rpx solid rgb(46,219,208);
}

.agree.si_checked {
    color: rgb(46,219,208);
}

.remember {
    margin-left: 43rpx;
    margin-right: 253rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: rgb(181,181,181);
}

.remember :checked {
    color: rgb(46,219,208);
}

.remember .wx-checkbox-input {
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #e2e4e3;
}

.remember .wx-checkbox-input.wx-checkbox-input-checked {
    border: 1rpx solid rgb(46,219,208);
}

.remember .si_checked {
    color: rgb(46,219,208);
}

.ag {
    color: rgb(96,98,102);
    font-size: 24rpx;
}

.rm {
    color: rgb(46,219,208);
    font-size: 30rpx;
}

.fg {
    color: rgb(96,98,102);
    font-size: 30rpx;
}

.forget {
    border: none;
    height: 48rpx;
    font-family: MicrosoftYaHeiLight;
    line-height: 48rpx;
    font-size: 30rpx;
    color: rgb(181,181,181);
    background-color: rgba(255,255,255,255);
}

.forget::after {
    border: none;
}

.forgeth {
    color: rgb(46,219,208);
}