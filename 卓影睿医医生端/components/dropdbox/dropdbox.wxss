.select_box {
  position: relative;
  background: rgba(red, green, blue, 0);
  width: 80rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: left;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(144, 147, 153);
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 24rpx;
  height: 12rpx;
  display: block;
  /* transition: transform 0.3s; */
}

.select_img_rotate {
  transform: rotate(180deg);
}

.dbox{
  position: relative;
  width: 320rpx;
  top: 0rpx;
  z-index: 99;
}
.option_box {
  width: 320rpx;
  border-radius: 4rpx;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  background: #fff;
  overflow-y: auto;
  z-index: 1;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}
.optionh{
  background-color: rgb(144, 147, 153);
}
